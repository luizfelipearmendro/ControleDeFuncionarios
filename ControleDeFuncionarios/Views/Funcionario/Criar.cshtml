@model FuncionarioModel
@{
    ViewData["Title"] = "Criar Funcionario";
}

<div class="text-center">

    <h1 class="display-7" style="font-weight:bold;">Cadastrar Funcionário</h1>

</div>

<form asp-controller="Funcionario" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome" class="fw-bold">Nome</label>
        <input type="text" required asp-for="Nome" class="form-control" placeholder="Digite o nome do novo Funcionario.">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />

    <div class="form-group">
        <label for="email" class="fw-bold">E-mail</label>
        <input type="text" required asp-for="Email" class="form-control" placeholder="Digite o e-mail do novo Funcionario.">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />

    <div class="form-group">
        <label for="celular" class="fw-bold">Celular</label>
        <input type="text" required asp-for="Celular" class="form-control" placeholder="Digite o telefone do novo Funcionario.">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />

    <div class="form-group">
        <label for="cargo" class="fw-bold">Cargo</label>
        <input type="text" required asp-for="Cargo" class="form-control" placeholder="Digite o cargo do novo Funcionario.">
        @Html.ValidationMessageFor(x => x.Cargo)
    </div>
    <br />

    <div class="form-group">
        <label for="setor" class="fw-bold">Setor</label>
        <input type="text" required asp-for="Setor" class="form-control" placeholder="Digite o setor do novo Funcionario.">
        @Html.ValidationMessageFor(x => x.Setor)
    </div>
    <br />

    <button type="submit" class="btn btn-primary w-100" style="background: #052E6B;border-color: #052E6B">Adicionar</button>
    <a class="btn btn-secondary w-100 mt-2" asp-controller="Funcionario" asp-action="Index" role="button">Voltar</a>
</form>