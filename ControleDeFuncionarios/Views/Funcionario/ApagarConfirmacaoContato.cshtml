@model FuncionarioModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">

    <h3>Realmente deseja apagar o funcionário (@Model.Nome)?</h3>

</div>

<a class="btn btn-primary w-100 mt-2" style="background: #052E6B;border-color: #052E6B" asp-controller="Contato" asp-action="Index" role="button">Cancelar exclusão</a>
<a type="submit" class="btn btn-danger w-100 mt-2" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>