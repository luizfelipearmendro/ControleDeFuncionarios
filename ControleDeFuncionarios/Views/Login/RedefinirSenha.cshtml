@model RedefinirSenhaModel

@{
    Layout = "_LayoutLogout";
    ViewData["Title"] = "Redefinir a Senha";

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}

<br />
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<br />

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post" class="p-4 border rounded shadow-sm">
    <h3 class="text-center mb-4" style="font-weight:bold;">Redefinir sua Senha</h3>
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            <input type="text" asp-for="Login" required class="form-control" id="login" placeholder="Digite seu login">
        </div>
        @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-key"></i></span>
            <input type="text" asp-for="Email" required class="form-control" id="email" placeholder="Digite seu e-mail">
        </div>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary w-100">Redefinir a Senha</button>
    <a class="btn btn-secondary w-100 mt-2" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
</form>