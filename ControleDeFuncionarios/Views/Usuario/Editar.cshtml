@using ControleDeFuncionarios.Enum

@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">

    <h3 class="display-7" style="font-weight:bold;">Editar Usuário</h3>

</div>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label for="nome" class="fw-bold">Nome</label>
        <input type="text" required asp-for="Name" class="form-control" placeholder="Digite a alteração do nome do usuário.">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <br />

    <div class="form-group">
        <label for="email" class="fw-bold">E-mail</label>
        <input type="text" required asp-for="Email" class="form-control" placeholder="Digite a alteração do e-mail do usuário.">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />

    <div class="form-group">
        <label for="login" class="fw-bold">Login</label>
        <input type="text" required asp-for="Login" class="form-control" placeholder="Digite a alteração do login do usuário.">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br />

    <div class="form-group">
        <label for="perfil" class="fw-bold">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Usuário Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <br />
    <button type="submit" class="btn btn-primary w-100" style="background: #052E6B;border-color: #052E6B">Editar</button>
    <a class="btn btn-secondary w-100 mt-2" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>