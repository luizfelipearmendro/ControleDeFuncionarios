@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}   

<div class="text-center">

    <h3>Realmente deseja apagar o usuário (@Model.Name)?</h3>

</div>

<a class="btn btn-primary w-100 mt-2" style="background: #052E6B;border-color: #052E6B" asp-controller="Usuario" asp-action="Index" role="button">Cancelar exclusão</a>
<a type="submit" class="btn btn-danger w-100 mt-2" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>